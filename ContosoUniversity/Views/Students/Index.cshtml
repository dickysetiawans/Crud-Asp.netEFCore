@model IEnumerable<ContosoUniversity.Models.Student>

@{
    ViewData["Title"] = "Index";
}
<style> a { color:white; }</style>
<h1>Contoso University</h1>
<a asp-action="Create">
    <button type="button" class="btn btn-primary position-relative">
        Create New
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
            +
        </span>
    </button>
</a>

<table class="table mt-3">
    <thead class="table-dark">
        <tr>
            <th>NO</th>          
            <th>
                @Html.DisplayNameFor(model => model.FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>@Html.DisplayFor(modelItem => item.ID)</th>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                
                <a asp-action="Edit" asp-route-id="@item.ID"><span class="badge bg-primary">Edit</span></a> |
                <a asp-action="Details" asp-route-id="@item.ID"><span class="badge bg-success">Details</span></a> |
                <a asp-action="Delete" asp-route-id="@item.ID"><span class="badge bg-danger">Delete</span></a>
            </td>
        </tr>
}
    </tbody>
</table>
